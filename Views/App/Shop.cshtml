@model IEnumerable<Product>

@{
	ViewData["Title"] = "Shop (MVC)";
}



<div class="row">

	@foreach (var p in Model)
	{

	 <div class="col-md-3">
	  <div class="border bg-light rounded p-1">

	   <img src="~/img/@(p.ArtId).jpg" class="img-fluid" title="@p.Artist -  @p.Title" alt="@p.Artist -  @p.Title" />
	   <h3>
					@Html.DisplayFor(modelItem => p.Category) - @p.Size
	   </h3>
	   <ul>

		<li>
						@Html.DisplayFor(modelItem => p.Price)
		</li>

		<li class="product-props">
						@Html.DisplayFor(modelItem => p.Artist)
		</li>
		<li>
						@Html.DisplayFor(modelItem => p.Title)
		</li>
		<li>
						@Html.DisplayFor(modelItem => p.ArtDescription)
		</li>
	   </ul>
				@* 09/25/2022 11:23 am - SSN - Comment out.  Not functional
					<button id="buyButton" class="btn btn-success">Buy</button>*@
	  </div>
	 </div>
	}

</div>

