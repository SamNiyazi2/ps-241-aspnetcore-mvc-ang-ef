@{
    ViewBag.Title = "home page";
}

<!doctype html>
<html>
<head>
    <tilte>Dutch Treat - @ViewBag.title</tilte>
    <link href="~/css/site.css" rel="stylesheet" />
</head>
<body>
    <h2>@ViewBag.title</h2>

    <div class="product-info">

        <img src="~/img/VanGogh.jpg" />
        <h3>Mug</h3>
        <ul class="product-props">
            <li>Price: $9.99</li>
            <li>Artist: Van Goph</li>
            <li>Title: </li>
            <li>Description: Self-portrait</li>
        </ul>
        <button id="buyButton">Buy</button>
    </div>

    <div id="theForm">
        <form>
            <label>Your Name:</label>
            <br />
            <input />
            <br />
            <label>Email:</label>
            <br />
            <input type="email" />
            <br />
            <label>Subject:</label>
            <br />
            <input />

            <br />
            <label>Message:</label>
            <br />
            <textarea rows="4">
</textarea>
            <br />
            <input type="submit" value="Send Message" />

        </form>
    </div>

    <div>

        <div id="loginToggle">login</div>
        <form class="popup-form">
            <div>
                <label>Username</label>
                <input />
            </div>
            <div>
                <label>Password</label>
                <input type="password" />

            </div>
            <div>
                <input type="checkbox" />
                <label>Remember me</label>
            </div>
            <input type="submit" value="Login" />
        </form>
    </div>

    <script src="~/node_modules/jquery/dist/jqeury.min.js">    </script>
    <script src="~/js/index.js">    </script>

</body>
</html>